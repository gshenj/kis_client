{
  "name": "kis",
  "version": "0.8.1",
  "description": "KIS client",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "clean": "if exist dist (rmdir /S /Q dist)",
    "dist": "electron-builder --win --ia32"
  },
  "build": {
    "appId": "kis",
    "asar": true,
    "electronVersion": "8.0.0",
    "electronDownload": {
      "mirror": "http://npm.taobao.org/mirrors/electron/"
    },
    "files": [
      "!**/data",
      "!**/images",
      "!**/.prettierrc.json",
      "!**/README.md",
      "!**/build.js",
      "!**/.vscode",
      "!**/dev-app-update.yml"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "app.png",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "publish": {
      "provider": "generic",
      "url": "http://148.70.243.239/releases/latest"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": true
    }
  },
  "author": "shenjin",
  "license": "ISC",
  "devDependencies": {
    "electron": "^8.0.0",
    "electron-packager": "^13.1.1",
    "electron-winstaller": "^2.7.0"
  },
  "dependencies": {
    "electron-log": "^4.0.6",
    "electron-updater": "^4.2.0"
  }
}
